<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista árbol -->
    <record id="bread_subscription_tree_view" model="ir.ui.view">
        <field name="name">bread.subscription.tree</field>
        <field name="model">bread.subscription</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="quantity"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="frequency"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="bread_subscription_form_view" model="ir.ui.view">
        <field name="name">bread.subscription.form</field>
        <field name="model">bread.subscription</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_activate" string="Activar" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_pause" string="Pausar" type="object" class="btn-warning" invisible="state != 'active'"/>
                    <button name="action_resume" string="Reanudar" type="object" class="btn-primary" invisible="state != 'paused'"/>
                    <button name="action_end" string="Finalizar" type="object" class="btn-danger" invisible="state not in ['active', 'paused']"/>
                    <button name="action_cancel" string="Cancelar" type="object" class="btn-secondary" invisible="state not in ['draft', 'paused']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="partner_id" required="1"/>
                            <field name="quantity" required="1"/>
                        </group>
                        <group>
                            <field name="frequency" required="1"/>
                            <field name="product_id" required="1"/>
                        </group>
                    </group>

                    <group>
                        <group>
                            <field name="date_start" required="1"/>
                            <field name="date_end" required="1"/>
                        </group>
                        <group>
                            <field name="unit_price" required="1"/>
                            <field name="total_price" readonly="1"/>
                        </group>
                    </group>

                    <group string="Notas">
                        <field name="notes" nolabel="1"/>
                    </group>

                    <notebook>
                        <page string="Entregas">
                            <field name="delivery_ids">
                                <tree>
                                    <field name="scheduled_date"/>
                                    <field name="delivery_date"/>
                                    <field name="quantity"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Órdenes de Venta">
                            <field name="sale_order_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="date_order"/>
                                    <field name="amount_total"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Movimientos de Stock">
                            <field name="stock_move_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="product_uom_qty"/>
                                    <field name="state"/>
                                    <field name="date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista búsqueda -->
    <record id="bread_subscription_search_view" model="ir.ui.view">
        <field name="name">bread.subscription.search</field>
        <field name="model">bread.subscription</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="quantity"/>
                <separator/>
                <filter name="filter_active" string="Activas" domain="[('state', '=', 'active')]"/>
                <filter name="filter_draft" string="Borradores" domain="[('state', '=', 'draft')]"/>
                <group expand="0" string="Agrupar por">
                    <filter name="group_by_partner" string="Cliente" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_by_state" string="Estado" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista entregas árbol -->
    <record id="bread_subscription_delivery_tree_view" model="ir.ui.view">
        <field name="name">bread.subscription.delivery.tree</field>
        <field name="model">bread.subscription.delivery</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="scheduled_date"/>
                <field name="delivery_date"/>
                <field name="quantity"/>
                <field name="state" optional="show"/>
                <field name="sale_order_line_id" optional="hide"/>
                <field name="stock_move_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Vista entregas formulario -->
    <record id="bread_subscription_delivery_form_view" model="ir.ui.view">
        <field name="name">bread.subscription.delivery.form</field>
        <field name="model">bread.subscription.delivery</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_mark_delivered" string="Entregada" type="object" class="btn-success" invisible="state not in ['scheduled', 'pending']"/>
                    <button name="action_mark_pending" string="Pendiente" type="object" invisible="state not in ['scheduled', 'delivered']"/>
                    <button name="action_cancel_delivery" string="Cancelar" type="object" class="btn-danger"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="subscription_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="quantity" readonly="1"/>
                        </group>
                        <group>
                            <field name="scheduled_date" readonly="1"/>
                            <field name="delivery_date"/>
                            <field name="sale_order_line_id" readonly="1"/>
                            <field name="stock_move_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista entregas búsqueda -->
    <record id="bread_subscription_delivery_search_view" model="ir.ui.view">
        <field name="name">bread.subscription.delivery.search</field>
        <field name="model">bread.subscription.delivery</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="state"/>
                <separator/>
                <filter name="filter_scheduled" string="Programadas" domain="[('state', '=', 'scheduled')]"/>
                <filter name="filter_delivered" string="Entregadas" domain="[('state', '=', 'delivered')]"/>
                <filter name="filter_pending" string="Pendientes" domain="[('state', '=', 'pending')]"/>
            </search>
        </field>
    </record>

</odoo>
